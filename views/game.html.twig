    <body>
        <div class="container">
            <h1>Roshambo</h1>
            <form class="form-inline" action="view_game" method="post">
                <div class="row">
                    <h2>Game On!</h2>
                    <div class="col-xs-6">
                        <h3>Wins this game:</h3>
                        <label for="input1">Player 1 Choice:</label>
                        <select name="input1" type = "text">
                            <option value="rock">Rock Smash<option>
                            <option value="paper">Paper Smother</option>
                            <option value="scissors">Scissors Slice</option>
                        </select>
                    </div>
                    <div class="col-xs-6">
                        <h3>Wins this game:</h3>
                        <label for="input2">Player 2 Choice:</label>
                        <select name="input2" type = "text">
                            <option value="rock">Rock Smash<option>
                            <option value="paper">Paper Smother</option>
                            <option value="scissors">Scissors Slice</option>
                        </select>
                        <!-- <input type="text" name="input2" placeholder = "Rock, Paper, Scissors!"> -->
                    </div>
                </div>
                <button type="submit" class="btn btn-danger">Play!</button>
            </form>
        </div>
    </body>
